@using Employee.Repository.Models
@model EmployeeManagement.ViewModels.EmployeeViewModel
@{
    ViewBag.Title = "Delete Employee";
    var breadcrumbs = ViewBag.Breadcrumbs as List<BreadCumbItem>;
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4>@ViewBag.Title</h4>
        </div>
        <div class="breadcrumbs-container">
            @await Html.PartialAsync("_BreadCrumbs", breadcrumbs)
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="fa fa-exclamation-triangle"></i>
                Are you sure you want to delete this employee?
            </div>

            <dl class="row">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Department:</dt>
                <dd class="col-sm-9">@Model.Department</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Hire Date:</dt>
                <dd class="col-sm-9">@Model.HireDate.ToString("dd MMMM yyyy")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>